@*@model ProductCategoryViewModel
@{ 

}
<h1>Add product</h1>

<form asp-action="AddProduct" asp-controller="Product" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.ProductName">Product name : </label>

        <input class="form-control" asp-for="@Model.ProductName" type="text">
    </div>

    <div class="form-group">
        <label asp-for="@Model.QuantityPerUnit">Quantity per unit : </label>
        <input class=" form-control" asp-for="@Model.QuantityPerUnit" type="text" />

    </div>

    <div class="form-group">
        <label asp-for="@Model.UnitPrice">Price : </label>
        <input class=" form-control" asp-for="@Model.UnitPrice" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.UnitsInStock">Units in stock : </label>
        <input class=" form-control" asp-for="@Model.UnitsInStock" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.UnitsOnOrder">Units on order : </label>
        <input class=" form-control" asp-for="@Model.UnitsOnOrder" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.ReorderLevel">Reorder level : </label>
        <input class=" form-control" asp-for="@Model.ReorderLevel" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Discounted">Discounted : </label>
        <input class=" form-control" asp-for="@Model.Discounted" type="checkbox" value="0" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.CategoryID">Category : </label>
        <select asp-for="@Model.CategoryID">
            <option selected value="0"> Select a category </option>
            @foreach (var item in Model.Categories)
            {
                <option value="@item.CategoryID">@item.CategoryName</option>
            }
        </select>
    </div>
    
    <div class="form-group">
        <input type="submit" class="btn btn-primary dropright" value="Save"/>
    </div>

</form>*@